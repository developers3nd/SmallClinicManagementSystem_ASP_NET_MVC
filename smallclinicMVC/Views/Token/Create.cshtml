@model smallclinicMVC.Models.Token



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Token</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.PatientName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PatientName)
                @Html.ValidationMessageFor(model => model.PatientName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DoctorID, "DoctorID", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.DoctorID, ViewBag.doctorlst as SelectList, "Choose Doctor")
                @Html.ValidationMessageFor(model => model.DoctorID)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TokenDate, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TokenDate)
                @Html.ValidationMessageFor(model => model.TokenDate)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Token" class="btn btn-primary" />
            </div>
        </div>

        <h2>Your token number is : @TempData["tokenNumber"]</h2>
    </div>
}

